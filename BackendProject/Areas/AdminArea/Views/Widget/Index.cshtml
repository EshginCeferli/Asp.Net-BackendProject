@model Widget
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
       
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Fullname
                    </th>
                    <th>
                        Role
                    </th>

                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>               
                <tr>
                    <td>
                        <img src="~/assets/img/blog/@Model.Image" alt="Alternate Text" />
                    </td>
                    <td>
                        @Model.Fullname
                    </td>
                    <td>
                        @Model.Role
                    </td>

                    <td style="text-align: center;">
                        <a asp-action="Detail" asp-route-id="@Model.Id" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                        <form style="display: inline-block;" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                        </form>
                    </td>
                </tr>

                


            </tbody>
        </table>
    </div>
