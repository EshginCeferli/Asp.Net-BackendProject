@model Contact
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <form asp-controller="Contact" asp-action="Edit" enctype="multipart/form-data" class="forms-sample" method="post">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input class="form-control" asp-for="Title">
                                <span asp-validation-for="Title" class="text-danger my-1"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input class="form-control" asp-for="Description">
                                <span asp-validation-for="Description" class="text-danger my-1"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Address">Address</label>
                                <input class="form-control" asp-for="Address">
                                <span asp-validation-for="Address" class="text-danger my-1"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Phone">Phone</label>
                                <input class="form-control" asp-for="Phone">
                                <span asp-validation-for="Phone" class="text-danger my-1"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Mail">Mail</label>
                                <input class="form-control" asp-for="Mail">
                                <span asp-validation-for="Mail" class="text-danger my-1"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="WorkHour">WorkHour</label>
                                <input class="form-control" asp-for="WorkHour">
                                <span asp-validation-for="WorkHour" class="text-danger my-1"></span>
                            </div>

                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-controller="Contact" asp-action="Index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
