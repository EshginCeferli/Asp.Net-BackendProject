@model BannerCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid mx-5 my-3">
    <h3>Slider image</h3>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>        

            <label for="title">Title</label>
            <input class="form-control" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>

            <label for="description">Subtitle</label>
            <input class="form-control" asp-for="Subtitle">
            <span class="text-danger" asp-validation-for="Subtitle"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Banner" asp-action="Index">Back</a>
        <a class="btn btn-warning" asp-controller="Banner" asp-action="Create">Reset</a>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
