@model IEnumerable<Banner>
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-area="AdminArea" asp-controller="Banner" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th style="text-align: center;">
                        Title
                    </th>
                    <th style="text-align: center;">
                        Subtitle
                    </th>
                    <th style="text-align: center;">
                        Description
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/img/banner/@item.Image" alt="slider" />
                        </td>
                        <td>
                            @(Html.Raw(item.Title))
                        </td>
                        <td>
                            @(Html.Raw(item.Subtitle))
                        </td>
                       

                        <td style="text-align: center;">
                            <a asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></a>
                            <form style="display: inline-block;" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i></button>
                            </form>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>
