@model Slider

@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid mx-5 my-3">
    <h3>Slider image</h3>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>

            <label for="header">Header</label>
            <input class="form-control" asp-for="Header">
            <span class="text-danger" asp-validation-for="Header"></span>

            <label for="title">Title</label>
            <input class="form-control" asp-for="Title">
            <span class="text-danger" asp-validation-for="Title"></span>

            <label for="description">Description</label>
            <input class="form-control" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <a class="btn btn-primary" asp-controller="Slider" asp-action="Index">Back</a>
        <a class="btn btn-warning" asp-controller="Slider" asp-action="Create">Reset</a>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

