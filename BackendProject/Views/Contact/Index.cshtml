@model ContactVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="~/assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Contact Us</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- contact wrapper area start -->
    <div class="contact-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="contact-message">
                        <h2 class="contact-title">tell us your project</h2>
                        <form  asp-controller="Contact" asp-action="SendMessage" method="post" enctype="multipart/form-data" class="contact-form">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    
                                    <input asp-for="@Model.Message.Name" placeholder="Name *" >
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input asp-for="@Model.Message.Phone"  placeholder="Phone *" >
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input placeholder="Email *" asp-for="@Model.Message.Email">
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input placeholder="Subject *" asp-for="@Model.Message.Subject">
                                </div>
                                <div class="col-12">
                                    <div class="contact2-textarea text-center">
                                        <input placeholder="Message" asp-for="@Model.Message.Content" />
                                         
                                    </div>
                                    <div class="contact-btn">
                                        <button class="btn" type="submit">Send Message</button>
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-center">
                                    <p class="form-messege"></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact-info pt-0">
                        <h2 class="contact-title">@Model.Contact.Title</h2>
                        <p>
                            @Model.Contact.Description
                        </p>
                        <ul>
                            <li><i class="fa fa-fax"></i> @Model.Contact.Description</li>
                            <li><i class="fa fa-phone"></i> @Model.Contact.Mail</li>
                            <li><i class="fa fa-envelope-o"></i> @Model.Contact.Phone</li>
                        </ul>
                        <div class="working-time">
                            <h3>Working Hours</h3>
                            <p class="pb-0"><span>@Model.Contact.WorkHour</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact wrapper area end -->
</main>
